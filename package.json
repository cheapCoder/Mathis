{
	"name": "mathis",
	"publisher": "happyHacking",
	"displayName": "Mathis",
	"description": "一个辅助国际化显示的轻量插件",
	"version": "0.3.0",
	"repository": "https://github.com/necessityOVO/mathis",
	"icon": "img/logo.png",
	"main": "./out/src/extension.js",
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"contributes": {
		"commands": [
			{
				"command": "mathis.colorRef",
				"title": "update color by shoplazza"
			}
		],
		"languages": [
			{
				"id": "svelte",
				"aliases": [
					"Svelte",
					"svelte"
				],
				"extensions": [
					".svelte"
				]
			}
		],
		"keybindings": [
			{
				"key": "cmd+shift+v",
				"command": "mathis.searchFromClipboard"
			}
		],
		"configuration": [
			{
				"title": "Mathis",
				"properties": {
					"mathis.themeUpdateLink": {
						"order": 0,
						"description": "主题升级的css链接",
						"type": "string",
						"default": "https://assets.shoplazza.com/sds/0.1.1/design-tokens.css"
					},
					"mathis.themeUpdateIgnoreColors": {
						"order": 1,
						"description": "替换中忽略的color",
						"type": "array",
						"items": {
							"type": "string"
						},
						"uniqueItems": true
					},
					"mathis.themeUpdateIncludeGlob": {
						"order": 2,
						"markdownDescription": "主题升级涉及文件包含:[(使用vscode glob)](https://code.visualstudio.com/api/references/vscode-api#GlobPattern)",
						"type": "string",
						"default": "src/**/*"
					},
					"mathis.themeUpdateExcludeGlob": {
						"order": 3,
						"markdownDescription": "主题升级涉及文件排除:[(使用vscode glob)](https://code.visualstudio.com/api/references/vscode-api#GlobPattern)",
						"type": "string",
						"default": "**/{node_modules,dist,out,test,assets}/**"
					},
					"mathis.defIncludeGlob": {
						"order": 4,
						"markdownDescription": "定义文件包含:[(使用vscode glob)](https://code.visualstudio.com/api/references/vscode-api#GlobPattern)",
						"type": "string",
						"default": "src/**/locale/{en_US,zh_CN}.{ts,js,json}"
					},
					"mathis.defExcludeGlob": {
						"order": 5,
						"markdownDescription": "定义文件排除:[(使用vscode glob)](https://code.visualstudio.com/api/references/vscode-api#GlobPattern)",
						"type": "string",
						"default": "**/{node_modules,dist,out,test,assets}/**"
					},
					"mathis.applyIncludeGlob": {
						"order": 6,
						"markdownDescription": "应用文件包含:[(使用vscode glob)](https://code.visualstudio.com/api/references/vscode-api#GlobPattern)",
						"type": "string",
						"default": "src/**/*.{ts,js,tsx,jsx,svelte,vue}"
					},
					"mathis.applyExcludeGlob": {
						"order": 7,
						"markdownDescription": "应用文件排除:[(使用vscode glob)](https://code.visualstudio.com/api/references/vscode-api#GlobPattern)",
						"type": "string",
						"default": "**/{node_modules,dist,out,test,assets}/**"
					},
					"mathis.lazyLoadApply": {
						"order": 8,
						"description": "是否直到进入国际化定义文件才加载字段应用列表",
						"type": "boolean",
						"default": true
					},
					"mathis.detectApplyWay": {
						"order": 9,
						"description": "检测应用节点的方式\nreg:正则匹配(会有缺失)); split:分词在def中查找(会有多余)",
						"type": "string",
						"default": "split",
						"enum": [
							"reg",
							"split"
						]
					},
					"mathis.defSelect": {
						"order": 10,
						"description": "跳转定义文件时选择字段的哪些部分",
						"type": "string",
						"default": "value",
						"enum": [
							"key",
							"value",
							"key and value"
						]
					},
					"mathis.pathSlice.enabled": {
						"order": 11,
						"type": "boolean",
						"default": true,
						"description": "显示路径时去除src之前的部分"
					},
					"mathis.statusBar.enabled": {
						"order": 12,
						"type": "boolean",
						"default": true,
						"description": "在左下方显示查找按钮,其行为与cmd+shift+v相同"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/acorn": "^4.0.6",
		"@types/glob": "^7.2.0",
		"@types/json-to-ast": "^2.1.2",
		"@types/lodash": "^4.14.179",
		"@types/mocha": "^9.1.0",
		"@types/node": "^14.18.12",
		"@types/vscode": "^1.65.0",
		"@typescript-eslint/eslint-plugin": "^5.15.0",
		"@typescript-eslint/parser": "^5.15.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^8.11.0",
		"mocha": "^9.2.2",
		"typescript": "^4.6.2"
	},
	"dependencies": {
		"@babel/types": "^7.17.0",
		"acorn": "^8.7.0",
		"json-to-ast": "^2.1.0",
		"lodash": "^4.17.21"
	}
}
